<div class="quantum-config-wrapper">
  <!-- Header Section -->
  <div class="config-header">
    <i class="fas fa-atom"></i>
    <h2>Quantum Chronicles Core State</h2>
  </div>

  <!-- Main Content Area - Two Column Layout -->
  <div class="config-main-container">
    <!-- Left Sidebar with Tabs -->
    <aside class="quantum-sidebar">
      <nav class="quantum-tabs">
        {{#each tabs}}
          <a class="quantum-tab {{#if (eq ../activeTab id)}}active{{/if}}" data-tab="{{id}}" href="#" title="{{label}}">
            <i class="{{icon}}"></i>
            <span class="tab-label">{{label}}</span>
          </a>
        {{/each}}
      </nav>
    </aside>

    <!-- Right Content Area -->
    <div class="quantum-content">
      <fieldset class="settings-section">
        <legend>
          <i class="{{icon}}"></i>
          {{legend}}
        </legend>
        <div class="settings-list">
          {{#each fields}}
            <div class="form-group">
              <label for="{{name}}">{{label}}</label>
              <div class="form-fields">
                {{#if (eq type "boolean")}}
                  <input type="checkbox" id="{{name}}" name="{{name}}" {{#if value}}checked{{/if}} />
                {{else if (eq type "number")}}
                  <input type="range" id="{{name}}" name="{{name}}" value="{{value}}" min="0" max="1" step="0.1" />
                  <span class="range-value">{{multiply value 100}}%</span>
                {{else}}
                  <input type="text" id="{{name}}" name="{{name}}" value="{{value}}" />
                {{/if}}
              </div>
              {{#if hint}}
                <p class="notes">{{hint}}</p>
              {{/if}}
            </div>
          {{/each}}
        </div>
      </fieldset>
    </div>
  </div>

  <!-- Footer with Save Button -->
  <footer class="config-footer">
    <button type="submit" class="primary" title="Save and synchronize all settings">
      <i class="fas fa-check-circle"></i> Synchronize Quantum State
    </button>
  </footer>
</div>
